  {
    "name": "1click-pick-color",
    "version": "0.1",
    "description": "pick color of any part in page",
    "permissions": [
          "tabs",
          "activeTab",
          "windows"
        ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
     "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["css/picker.css"],
        "js": ["js/picker.js"]
      }
    ],
    "browser_action":{
      "default_icon": "images/browseraction.png",
      "default_title": "Start picking color"
      },
    "offline_enabled": true,
    "default_locale": "en",
    "icons": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "manifest_version": 2
  }